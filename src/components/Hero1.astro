---
import thumbnail from '../assets/thumbnail.jpg';

---

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500&family=Fraunces:opsz,wght@9..144,300;600&display=swap" rel="stylesheet">

<div class="hero">
  <div class="text-content">
    <h1 class="title">My Wandering<br>Journal</h1>
    <p class="subtitle">
      My humble place to share random travel stories, recipes that I lives on and dumb things throughout my journey.
    </p>
  </div>
  
  <div class="image-container">
    <img
      src={thumbnail.src}
      alt="swiss"
    />
  </div>
</div>

<style>
  /* Color Palette extracted from image:
    Bg: #EADCD1 (Beige)
    Text: #3E3029 (Dark Coffee)
  */

  .hero {
    display: flex;
    flex-direction: column;
    background: var(--color-hero-bg);
    border-radius: var(--space-m);
    margin-left: var(--space-m);
    margin-right: var(--space-m);
    padding: var(--space-l);
    margin-top: 0%;
    /* min-height: clamp(60vh, 70vh + 5vw, 85vh); */
    gap: var(--space-l);
  }

  /* Text Styling */
  .text-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    color: #3E3029;
    order: 2; /* Text comes after image on mobile */
  }

  .title {
    font-family: 'Fraunces', serif; /* The "Retro" Serif font */
    font-size: clamp(2.5rem, 2rem + 2.5vw, 4rem);
    font-weight: 600;
    line-height: 1.05;
    margin: 0 0 var(--space-m) 0;
    letter-spacing: -0.04em;
  }

  .subtitle {
    font-size: var(--font-step-0);
    line-height: 1.5;
    opacity: 0.8;
    margin: 0;
    max-width: 40ch;
  }

  /* Image Styling */
  .image-container {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    order: 1; /* Image comes first on mobile */
  }

  img {
    width: 100%;
    height: clamp(250px, 30vh, 400px);
    object-fit: cover;
    border-radius: 24px;
    display: block;
  }

  /* Tablet and Desktop View */
  @media (min-width: 768px) {
    .hero {
      flex-direction: row;
      padding-left: var(--space-2xl);
      padding-right: var(--space-2xl);
      /* gap: var(--space-2xl); */
      margin-left: var(--space-xl);
      margin-right: var(--space-xl);
      /* min-height: clamp(50vh, 60vh + 5vw, 75vh); */
    }

    .text-content {
      order: 1; /* Text comes first on larger screens */
      justify-content: flex-end;
      padding-right: var(--space-l);
    }

    .image-container {
      order: 2; /* Image comes after text on larger screens */
      justify-content: flex-end;
    }

    .title {
      margin-bottom: var(--space-l);
    }

    img {
      height: clamp(300px, 40vh, 500px);
      width: 100%;
      max-width: 700px;
    }
  }

  /* Large Desktop View */
  @media (min-width: 1200px) {
    .hero {
      margin-left: var(--space-3xl);
      margin-right: var(--space-3xl);
      padding-left: var(--space-2xl);
      padding-right: var(--space-2xl);
      /* gap: var(--space-3xl); */
    }

    img {
      max-width: 1000px;
    }
  }
</style>
