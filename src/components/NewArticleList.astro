---
import NewArticleCard from './NewArticleCard.astro';
import type { ArticleData } from '../utilities/filterArticles';

interface Props {
  articles: ArticleData[];
}

const { articles } = Astro.props;
---

<section class="articles-section">
  <div class="grid-container">
    {articles.map(article => (
      <NewArticleCard
        category={article.category}
        title={article.title}
        date={article.date}
        imageSrc={article.imageSrc}
        slug={article.slug}
      />
    ))}
  </div>
</section>

<style>
   /* The main background color from the previous design */
  .articles-section {
    /* background-color: #EADCD1; */
    padding: 4rem 2rem; /* Spacing around the whole section */
  }

  .grid-container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    /* 1 column on mobile, 3 columns on desktop */
    grid-template-columns: 1fr;
    gap: 3rem; /* Spacing between cards */

    @media (min-width: 768px) {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>
