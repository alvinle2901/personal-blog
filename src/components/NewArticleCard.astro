---
/* src/components/ArticleCard.astro */
interface Props {
  category: string;
  title: string;
  date: string;
  imageSrc: string;
}

const { category, title, date, imageSrc } = Astro.props;
---

<article class="article-card">
  <div class="image-wrapper">
    <img src={imageSrc} alt={title} />
  </div>
  <div class="content">
    <span class="category-tag">{category}</span>
    <h3>{title}</h3>
    <time>{date}</time>
  </div>
</article>

<style>
  .article-card {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    color: var(--color-text);
  }

  /* Image Styling */
  .image-wrapper {
    width: 100%;
    aspect-ratio: 1 / 1; /* Ensures images are perfectly square */
    overflow: hidden;
    border-radius: 24px; /* Matching the rounded aesthetic */
  }

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  /* Optional hover effect */
  .image-wrapper:hover img {
    transform: scale(1.05);
  }

  /* Content Styling */
  .content {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .category-tag {
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    background-color: var(--color-tag);
    padding: 0.5rem 1rem;
    border-radius: 50px; /* Pill shape */
    margin-bottom: 1rem;
    display: inline-block;
  }

  h3 {
    font-size: 1.75rem;
    font-weight: 600;
    line-height: 1.2;
    margin: 0 0 1rem 0;
    letter-spacing: -0.02em;
  }

  time {
    font-size: 0.9rem;
    opacity: 0.7;
  }
</style>
